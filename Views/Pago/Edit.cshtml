@model Inmobiliaria2.Models.Pago

@{
    ViewData["Title"] = "Edit";
    var itaContratos = (IList<Contrato>)ViewBag.Contrato;
}

<h1>Edit</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPago" class="control-label"></label>
                <input asp-for="IdPago" class="form-control" readonly/>
                <span asp-validation-for="IdPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Contrato</label>
                <select asp-for="idContrato" class="form-control" name="idContrato">
                    @foreach (var item in itaContratos)
                    {
                        <option value="@item.IdContrato">@("Nro: " +item.IdContrato + " Inquilino: " + item.Inquilino.Apellido + " Inmueble: " + item.Inmueble.Direccion)</option>
                    }
                </select>
                <span asp-validation-for="idContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cuota" class="control-label"></label>
                <input asp-for="Cuota" class="form-control" />
                <span asp-validation-for="Cuota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NroCuota" class="control-label"></label>
                <input asp-for="NroCuota" class="form-control" />
                <span asp-validation-for="NroCuota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" class="form-control" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Anulado" /> @Html.DisplayNameFor(model => model.Anulado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

