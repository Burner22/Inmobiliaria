@model IEnumerable<Inmobiliaria2.Models.Propietario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index Propietarios</h1>


<p>
    <a asp-action="Create">Crear Propietario</a>
</p>
<table class="table">
    <thead>
        <tr>
          @*  <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Domicilio)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domicilio)
            </td>

            <td>
                    <a asp-controller="Inmueble" asp-action="PorPropietario" asp-route-id="@item.Id" title="MisPropiedades">Mis Propiedades</a>&nbsp;
            </td>
            
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) 
                    @Html.ActionLink("Details", "Details", new { id=item.Id })
                    @if (User.IsInRole("SuperAdministrador") || User.IsInRole("Administrador"))
                    {
                     @Html.ActionLink("Delete", "Delete", new { id=item.Id })   
                    }
                    
            </td>
        </tr>
}
    </tbody>
</table>

